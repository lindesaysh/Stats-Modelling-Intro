bookdown::gitbook:
  lib_dir: "book_assets"
  config:
    sharing: null
    edit: null
    download: ["pdf"]
    toc:
      before: |
        <a href="https://www.st-andrews.ac.uk/mathematics-statistics/"><img src="standard-vertical-black.png" width="180"></a>
  split_by: chapter
  highlight: pygments
  css: 'style.css'
  includes:
    in_header: '_toggle.html'
    
bookdown::pdf_book:
  includes:
    in_header: preamble.tex
    after_body: afterbody.tex
  latex_engine: xelatex
  citation_package: natbib
  keep_tex: yes
  pandoc_args: --top-level-division=chapter
  toc_depth: 3
  toc_unnumbered: no
  toc_appendix: yes

